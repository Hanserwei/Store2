<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanserwei.mapper.CategoriesMapper">
    <resultMap id="BaseResultMap" type="com.hanserwei.entity.po.Categories">
        <!--@mbg.generated-->
        <!--@Table categories-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="parent_id" jdbcType="BIGINT" property="parentId"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, `name`, parent_id
    </sql>

    <select id="selectAll" resultMap="selectAll">
        select c.name as fatherName,c2.name as childName,p.id as productId,p.name as productName
        from categories as  c
        inner join categories as c2 on c.id = c2.parent_id
        right join products as p on p.category_id = c2.id
        where p.is_on_sale = 1;
    </select>

    <resultMap id="selectAll" type="com.hanserwei.entity.vo.CategoryVO">
        <result property="fatherName" column="fatherName"/>
        <collection property="childNames" ofType="com.hanserwei.entity.vo.CategoryChildrenVO">
            <result column="childName" property="name"/>
            <collection property="products" ofType="com.hanserwei.entity.vo.ProductsVO">
                <result column="productId" property="id"/>
                <result column="productName" property="name"/>
            </collection>
        </collection>
    </resultMap>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanserwei.mapper.ProductsMapper">
    <resultMap id="BaseResultMap" type="com.hanserwei.entity.po.Products">
        <!--@mbg.generated-->
        <!--@Table products-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="description" jdbcType="LONGVARCHAR" property="description"/>
        <result column="price" jdbcType="DECIMAL" property="price"/>
        <result column="stock" jdbcType="INTEGER" property="stock"/>
        <result column="category_id" jdbcType="BIGINT" property="categoryId"/>
        <result column="is_on_sale" jdbcType="BOOLEAN" property="isOnSale"/>
        <result column="created_at" jdbcType="TIMESTAMP" property="createdAt"/>
        <result column="updated_at" jdbcType="TIMESTAMP" property="updatedAt"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, `name`, description, price, stock, category_id, is_on_sale, created_at, updated_at
    </sql>

    <select id="selectAll" resultType="com.hanserwei.entity.vo.ProductsVO">
        select id, name, description, price, stock, is_on_sale
        from products
        where is_on_sale = 1;
    </select>
    
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM products
        WHERE id = #{id}
    </select>
    
    <update id="updateStock">
        UPDATE products 
        SET stock = #{stock}, updated_at = NOW()
        WHERE id = #{id}
    </update>
</mapper>